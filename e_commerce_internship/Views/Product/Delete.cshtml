@model e_commerce_internship.Entity.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <h3>Ürünü Silmek Üzeresiniz</h3>
    <div>
        <h4>Product</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Silinecek Ürün:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.name)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-primary btn-danger" /> |
                <a href="/Product/Index" class="btn btn-primary">Ürün Listesi</a>
            </div>
        }
    </div>
    </section>