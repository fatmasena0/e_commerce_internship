@model e_commerce_internship.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="cart-box-main">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-lg-6 mb-3">
                <div class="checkout-address">
                    <div class="title-left">
                        <h3>Teslimat Adresi</h3>
                    </div>
                    @using (Html.BeginForm("Checkout", "Cart", FormMethod.Post, new { @class = "needs-validation" }))
                    {
                    <div class="mb-3">
                        <label for="username">Kullanıcı Adı *</label>
                        <input type="text" class="form-control" id="firstName" placeholder="" value="@User.Identity.Name" required="">
                    </div>
                        <div class="mb-3">
                            <label for="address">Adres *</label>
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                        <div class="row">
                            <div class="col-md-5 mb-3">
                                <label for="country">Şehir *</label>
                                @Html.EditorFor(model => model.Sehir, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Sehir, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="state">İlçe *</label>
                                @Html.EditorFor(model => model.Semt, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Semt, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="zip">Posta Kodu *</label>
                                @Html.EditorFor(model => model.PostaKodu, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PostaKodu, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <hr class="mb-4">
                        <div class="col-lg-6 col-sm-6">
                            <div class="update-box">
                                <button type="submit" class="ml-auto btn hvr-hover">Siparişi Tamamla</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


