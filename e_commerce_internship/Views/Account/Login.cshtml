@model e_commerce_internship.Models.Login

<div class="container">
    <div>
        <div class="title-left">
            <h3><a data-toggle="collapse" href="#formRegister" role="button" aria-expanded="true" class="">Giriş Yap</a></h3>
        </div>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "col-sm-6 col-lg-6 mb-3" }))
        {
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="InputEmail1" class="mb-0">Kullanıcı Adı</label>
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    <label for="InputEmail1" class="mb-0">Şifre</label>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <button type="submit" class="btn hvr-hover">Giriş Yap</button>
        }
    </div>
</div>