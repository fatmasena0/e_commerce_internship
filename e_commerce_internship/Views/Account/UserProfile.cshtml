@model e_commerce_internship.Models.UserProfile
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div>
        <div class="title-left">
            <h3><a data-toggle="collapse" href="#formRegister" role="button" aria-expanded="true" class="">Profil Bilgileri</a></h3>
        </div>
        @using (Html.BeginForm("UserProfile", "Account", FormMethod.Post, new { @class = "col-sm-6 col-lg-6 mb-3" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.id)
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="InputLastname" class="mb-0">Ad</label>
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                <label for="InputLastname" class="mb-0">Soyad</label>
                @Html.EditorFor(model => model.surname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.surname, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                <label for="InputEmail1" class="mb-0">Kullanıcı Adı</label>
                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                <label for="InputPassword1" class="mb-0">E-Mail</label>
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                <a href="/Account/ChangePassword" class="mb-0">Şifre Değiştir</a>
            </div>
        </div>
            <button type="submit" class="btn hvr-hover">Bilgileri Güncelle</button>
        }
    </div>
</div>

