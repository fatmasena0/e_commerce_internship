@model e_commerce_internship.Entity.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <h3>Kategoriyi silmek istediğinize emin misiniz?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Kategori Adı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.name)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-default" /> |
                <a href="/Category/Index" class="btn btn-primary">Kategori Listesi</a>
            </div>
        }
    </div>
</section>