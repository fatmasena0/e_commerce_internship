@model IEnumerable<e_commerce_internship.Entity.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Kategori Listesi</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div id="example1_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
                            <thead>
                                <tr>
                                    <th>Kategori Adı</th>
                                    <th>Kategori ID</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody role="alert" aria-live="polite" aria-relevant="all">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.name</td>
                                        <td>@item.id</td>
                                        <td>
                                            <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.id})"> Düzenle </a>
                                            <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.id})"> Sil </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a class="btn btn-primary btn-block" href="@Url.Action("Create")"> Yeni Ekle </a>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>
